<title>Sign Up</title>
<h1>Sign Up for DressShare<br>
  <small>Look Fabulous on Nickels and Dimes</small></h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= f.label :email, "Dartmouth Email Address" %>
      <%= f.text_field :email %><br>
      <%= f.label :first_name, "First Name" %>
      <%= f.text_field :first_name %><br>
      <%= f.label :last_name, "Last Name" %>
      <%= f.text_field :last_name %><br>
      <%= f.label :password, "Password (4-20 characters)" %>
      <%= f.password_field :password %><br>
      <%= f.label :password_confirmation, "Confirm your password" %>
      <%= f.password_field :password_confirmation %><br>
      <%= f.submit "Create Your Account" %>
    <% end %>
  </div>
</div>