<title>Sign In</title>
<h1>Sign In to DressShare</h1>

<div class='row'>
  <div class="span6 offset3">
    <%= form_for @user, :html => {:class => "form-horizontal"}, :url => { :action => "create", :controller => "sessions"} do |f| %>
      <%= f.label :email, "Dartmouth Email" %>
      <%= f.text_field :email %><br>
      <%= f.label :password %>
      <%= f.password_field :password %><br>
      <%= f.submit "Sign In", :class => 'btn btn-primary'%>
    <% end %>
  </div>


</div>
<br>
New to DressShare?<br>
<%= link_to "Sign Up", new_user_path %>